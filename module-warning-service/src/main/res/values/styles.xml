<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="abLayout">
        <item name="tabBackground">@drawable/tab_background</item>
    </style>

    <style name="button_style">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">40px</item>
        <item name="android:layout_marginLeft">56px</item>
        <item name="android:background">@drawable/btn_selector</item>

    </style>

    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowFrame">@null</item><!--边框-->
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">false</item><!--半透明-->
        <item name="android:windowNoTitle">true</item><!--无标题-->
        <item name="android:windowBackground">@color/transparent</item><!--背景透明-->
        <item name="android:backgroundDimEnabled">true</item><!--模糊-->
    </style>

    <style name="dialogStyle" parent="AlertDialogCustom">
        <item name="android:textSize">@dimen/px_40</item>
        <item name="android:textColor">@color/waring_editext</item>
        <item name="android:padding">@dimen/dp_5</item>
    </style>

    <style name="waringTitle">
        <item name="android:textSize">@dimen/px_40</item>
        <item name="android:textColor">@color/ff0000</item>
        <item name="android:paddingTop">@dimen/px_25</item>
        <item name="android:paddingBottom">@dimen/px_25</item>
        <item name="android:paddingLeft">@dimen/px_50</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="pcb_button">
        <item name="android:textSize">@dimen/px_40</item>
        <item name="android:textColor">@color/textcolor</item>
        <item name="android:background">@drawable/btn_frame</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">@dimen/px_40</item>
        <item name="android:paddingRight">@dimen/px_40</item>

    </style>

    <style name="style_title">
        <item name="android:textSize">@dimen/sp_12</item>
        <item name="android:textColor">@color/textcolor</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="style_option">
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textColor">@color/textcolor</item>
        <item name="android:gravity">center_horizontal</item>

    </style>

    <style name="waring_text">
        <item name="android:textSize">@dimen/px_40</item>
        <item name="android:textColor">@color/waring_text</item>
        <item name="android:layout_marginTop">@dimen/px_60</item>
        <item name="android:layout_marginLeft">@dimen/px_20</item>
    </style>

    <style name="waring_editext">
        <item name="android:textSize">@dimen/px_40</item>
        <item name="android:textColor">@color/waring_editext</item>
        <item name="android:layout_marginLeft">@dimen/dp_6</item>
    </style>

    <style name="style_storageedi">
        <item name="android:background">@drawable/ed_frame</item>
        <item name="android:layout_marginRight">@dimen/px_16</item>
        <item name="android:textSize">@dimen/px_40</item>
        <item name="android:paddingLeft">@dimen/px_20</item>

    </style>

    <style name="style_storagetv">
        <item name="android:textSize">@dimen/px_40</item>
        <item name="android:textColor">@color/waring_editext</item>
        <item name="android:layout_marginTop">@dimen/px_40</item>
    </style>

    <style name="item_textstyle">
        <item name="android:textSize">@dimen/px_40</item>
        <item name="android:textColor">@color/waring_editext</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">@drawable/textview_border</item>
        <item name="android:paddingBottom">@dimen/px_16</item>
        <item name="android:paddingTop">@dimen/px_16</item>

    </style>

    <style name="mystyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="NoTitle" parent="Theme.AppCompat">
        <item name="android:windowNoTitle">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        　　
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <dimen name="px_25">25px</dimen>


</resources>
